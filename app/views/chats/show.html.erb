<div data-controller="chat-room" class="mx-auto md:w-2/3 w-full flex flex-col gap-10">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @chat %>
    <%= link_to "Edit this chat", edit_chat_path(@chat), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <span class="cursor-not-allowed mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium">Destroy this chat</span>
      <%= button_to "Destroy this chat", chat_path(@chat), method: :delete, class: "cursor-not-allowed mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" if false %>
    </div>
    <%= link_to "Back to chats", chats_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div>
      <div>
        <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Username</label>
        <div class="mt-2 flex gap-5 items-center">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
            <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">
              <%= current_user.split('-').first %>
            </span>
            <input data-chat-room-target="chatMessage" data-action="keydown.enter->chat-room#sendMessage" type="text" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="say something...">
          </div>
          <button data-action="chat-room#sendMessage" type="button" class="ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium">
            send message
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-amber-100 x-w-full">
    <div data-chat-room-target="receivedChatMessages" class="mx-auto p-5 text-center">
      <p>Something speaking...</p>
    </div>
  </div>
</div>
